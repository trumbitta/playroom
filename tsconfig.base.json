{
  "compileOnSave": false,
  "compilerOptions": {
    "rootDir": ".",
    "sourceMap": true,
    "declaration": false,
    "moduleResolution": "node",
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "importHelpers": true,
    "target": "es2015",
    "module": "esnext",
    "lib": ["es2017", "dom"],
    "skipLibCheck": true,
    "skipDefaultLibCheck": true,
    "baseUrl": ".",
    "paths": {
      "@playroom/coloring-pages/images/*": [
        "libs/coloring-pages/images/src/lib/*"
      ],
      "@playroom/guess-the-story/data": [
        "libs/guess-the-story/data/src/index.ts"
      ],
      "@playroom/guess-the-story/features/stories": [
        "libs/guess-the-story/features/stories/src/index.ts"
      ],
      "@playroom/ttt/features/match": ["libs/ttt/features/match/src/index.ts"],
      "@playroom/ttt/shared/types": ["libs/ttt/shared/types/src/index.ts"],
      "@playroom/ttt/state": ["libs/ttt/state/src/index.ts"],
      "@playroom/ttt/ui": ["libs/ttt/ui/src/index.ts"]
    }
  },
  "exclude": ["node_modules", "tmp"]
}
